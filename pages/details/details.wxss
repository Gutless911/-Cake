/* pages/details/details.wxss */
page {
  background-color: #F8F8F8;
}
/* 轮播 */
.Rotation {
  width: 100vw;
  height: 480rpx;
}
.Rotation_img {
  width: 100%;
  height: 100%;
}
/* 内容 */
.content_title{
  margin-bottom: 25rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  padding:0  20rpx;
}
.title_name{
  display: flex;
  width: 100%;
  font-weight: bolder;
  font-size: 16px;
  color: #323233;
  align-items: center;
}
.title_name text{
  width: 80%;
  font-size: 36rpx;
}
.title_name view{
  box-sizing: border-box;
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  font-weight:normal;
  padding:10rpx  0 ;
}
.icon-share{
  font-size: 36rpx !important;
  color: #c3a769;
  padding: 0   !important;
}
.title_Price{
  width: 100%;
  color: #c3a769;
  font-size: 22px;
  font-weight: bolder;
  margin-bottom: 20rpx;
}
.title_Tips{
  height: 70rpx;
  line-height: 70rpx;
  border-top: 1px solid #ebedf0 ;
  font-size: 12px;
}

/* 底部 */
.fom{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  color: #646566;
}
.fom view{
  display: flex;
  flex: 1 1 auto;
  justify-content: center;
  align-items: center;
  background-color: #fff;
}
.fom view .iconfont{
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
}
.fom view .iconfont text{
  font-size: 25rpx;
}
.Addin{
  background: #f3eee1!important;
  color: #c3a769!important;
  font-size: 36rpx;
}
.Shopping{
  background: #c3a769!important;
  color: #fff!important;
  font-size: 36rpx;
}