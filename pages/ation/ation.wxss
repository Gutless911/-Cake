/* pages/ation/ation.wxss */
page{
  height: 100%;
  display: flex;
}
.catebox-left{
  display: flex;
  width: 20%;
  height: 100%;
  flex-direction:column;
  background-color: #F8F8F8;
}
.catebox-left view{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 10%;
  box-sizing: border-box;
  padding: 0 20rpx;
  border-left: 6rpx solid transparent;
}
.active{
  border-color: #c3a769 !important;
  background-color: #fff !important;
}
.catebox-left view text{
  color: #666;
  font-size: 25rpx;
}
.catebox-righ{
  display: flex;
  width: 80%;
  height: 100%;
}
/* 提示 */
.Tips{
  text-align: center;
  font-size: 27rpx;
  margin: 50rpx auto;
}
/* 隐藏滚动条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
 }
 .catebox-item{
   box-sizing: border-box;
   padding: 0 25rpx;
 }
 .catebox-right view text{
    color: #BDBDBD;
    font-size: 25rpx;
 }
 .tui-list-li{
   display: flex;
   margin: 20rpx 0;
 }
 .tui-list-li image {
   width: 30%;
   height: 169rpx;
 }
 .tui-list-li view{
   width: 70%;
   position: relative;
   padding-left: 10rpx;
   
 }
 .tui-f .tuitext{
   margin-top: 40rpx;
   font-size: 27rpx;
   color: #333;
 }
 .tui-f image{
   width: 45rpx;
   height: 45rpx;
 }
 .tui-f .tui-t text{
  font-size: 28rpx;
  color: #C3A769;
 }
 .tui-f .tui-t{
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: space-between;
  margin-top: 70rpx;
}
/* 自定义组件 */
popup{
  position: fixed;
  bottom: 0;
  z-index: 2;
}
.Pophiding{
  width: 100%;
  height: 100%;
}