<!-- 遮罩层 -->
<view class="shadow" wx:if="{{chooseSize}}" bindtap='hideModal'></view>
<!-- 上滑高度 -->
<view class="choosen {{!Pop? 'ChoosenActive':''}}" wx:if="{{chooseSize}}" animation='{{animationData}}'>
  <!-- 内容 -->
  <view class="container-box {{Pop? 'ChoosenActive':''}}">
    <view class="box-title">
      <view class="title-img">
        <image src="{{innerText.src}}"></image>
      </view>
      <view class="title-name">
        <view class="title-text">
          <text>{{innerText.name}}</text>
          <text>¥{{Price}}</text>
        </view>
        <view class="iconfont icon-cha" bindtap='hideModal'></view>
      </view>
    </view>
    <view class="box-detailed">
      <view class="detailed-size" wx:for="{{innerText.detail}}" wx:key="index">
        <view>{{item.type}}</view>
        <view>
          <text  wx:for='{{item.content}}' wx:for-index='key' wx:key="key" bindtap="ChoiceKey" data-key="{{item}}" class="{{param[index]==key? 'textActive':''}}">{{item}}</text>
        </view>
      </view>
    </view>
    <view class="box-num">
      <view class="num-left">
        购买数量
      </view>
      <view class="num-right">
        <view class="iconfont icon-jian" bindtap="NamDel"></view>
        <view class="sl">{{innerText.count}}</view>
        <view class="iconfont icon-jia" bindtap="NamAdd"></view>
      </view>
    </view>
    <view class="box-purchase">
      <view bindtap="add">加入购物车</view>
      <view>立即购买</view>
    </view>
  </view>
</view>